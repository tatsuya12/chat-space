.wrapper
  .side-bar
    .header
      %h3.header__name
        = current_user.name
      %ul.header__lists
        =link_to new_group_path do
          =fa_icon'pencil-square-o', class: 'icon'
        = link_to edit_user_path(current_user) do
          =fa_icon'cog', class: 'icon'
    .groups
      .group
        - current_user.groups.each do |group|
          = link_to group_messages_path(group) do
            .group__name
              = group.name
            .group__text
              メッセージはまだありません。
  .chat
    .header
      .left-header
        .left-header__title
          shirasu
        %ul.left-header__members
          %li.member
            Members :
          %li.member
            shirasu
      .right-header
        .right-header__button
          %a(href="")
            Edit
    .messages
      .message
        .heigher-message
          .heigher-message__name
            shirasu
