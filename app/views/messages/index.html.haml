      %input.form__message(type="text" placeholder="type a message")
      .form__mask
        %label.form__mask__image(for="form_image")
          =fa_icon'picture-o'
          %input(type="file" id="form_image" style="display :none")
      %input.form__button(type="submit" value="Send")
